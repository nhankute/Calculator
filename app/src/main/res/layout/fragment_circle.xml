<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nhan.calculator.CircleFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGrey">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"
            android:src="@drawable/circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:background="@color/colorLightGrey"
            android:orientation="vertical"
            android:padding="7dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Radius :"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_radius_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/radius"
                    android:layout_toStartOf="@+id/spinner_radius"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/spinner_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:entries="@array/radius_aray"></Spinner>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/area_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Area :"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_area_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/area_circle"
                    android:layout_toStartOf="@+id/spinner_area_circle"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/spinner_area_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:entries="@array/area_array"></Spinner>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/perimeter_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:text="Perimeter :"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_perimeter_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/perimeter_circle"
                    android:layout_toStartOf="@id/spinner_circle"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/spinner_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:entries="@array/unit_array" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
