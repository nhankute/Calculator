<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nhan.calculator.RectangleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGrey"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/rectangle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGrey"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/side_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Side a:"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_side_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/side_a"
                    android:layout_toStartOf="@+id/spinner_a"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/spinner_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:entries="@array/unit_array"></Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/side_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Side b:"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_side_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/side_b"
                    android:layout_toStartOf="@+id/spinner_b"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/spinner_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:entries="@array/unit_array"></Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Area:"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/area"
                    android:layout_toStartOf="@+id/spinner_area"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/spinner_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:entries="@array/unit_array">

                </Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/perimeter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Perimeter:"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_perimeter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/perimeter"
                    android:layout_toStartOf="@+id/spinner_perimeter"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/spinner_perimeter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:entries="@array/unit_array"></Spinner>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_solve_rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="45dp"
                android:text="Solve" />

            <Button
                android:id="@+id/bt_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="45dp"
                android:layout_alignParentEnd="true"
                android:text="Clean" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
